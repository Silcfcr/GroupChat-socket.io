<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="./css/style.css" />
        <title>Learning Socket io</title>
    </head>
    <body>
        <h1>
            Welcome to the socket io public chat application
        </h1>

        <form class="messageForm">
            <div>
                <label for="userMessage">
                    Message:
                </label>
                <textarea id="userMessage"></textarea>
            </div>
            <button type="submit">
                Send message
            </button>
        </form>
        <!--
        <button class="broadCast">
            Send message to all
        </button>
        -->
        <div class="messageBox">
            <% if (messagesDB != undefined) { %>
                <% for (let i=0; i< messagesDB.length; i++) { %>
                    <p> <%= messagesDB[i] %></p>
                <% } %>    
            <% } %>
        </div>
        <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
        <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
        <script src="./js/index.js"></script>
    </body>
</html>